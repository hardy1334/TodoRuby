<h1>Edit an Existing Todo</h1>

<% if @todo.errors.any? %>
    <h2>The following errors prevented todo from being saved </h2>
    <ul>
        <%  @todo.errors.full_messages.each do |msg|   %>
           <li><%= msg  %></li>
        <% end %>   
    </ul>
<% end  %>

 <%=  form_for @todo do |f|    %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description   %>
    </p>
    <p>
        <%= f.submit %>
    </p>
 <% end %>

  <%= link_to "Back to todos listing", todos_path %>